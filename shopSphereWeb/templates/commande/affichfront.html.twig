{% extends 'basefront.html.twig' %}

{% block title %}Commande Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Commande</h1>

        <div class="row">
            {% for commande in commandes %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-primary">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-receipt mr-2"></i>Id Commande: {{ commande.idCommande }}
                            </h5>
                            <p class="card-text">
                                <i class="far fa-calendar-alt mr-2"></i>Date Commande: {{ commande.datecommande ? commande.datecommande|date('Y-m-d') : '' }}
                            </p>
                            <p class="card-text">
                                <i class="fas fa-align-left mr-2"></i>Description: {{ commande.description }}
                            </p>
                            <p class="card-text">
                                <i class="fas fa-dollar-sign mr-2"></i>Montant Total: {{ commande.montanttotal }}
                            </p>
                            <a href="{{ path('app_commande_show', {'idCommande': commande.idCommande}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye mr-1"></i> Show Details
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-md-12">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle mr-2"></i>No records found
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
